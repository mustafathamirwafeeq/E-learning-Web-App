@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="dropdown">
        <a id="dropdownMenu1" href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @ELearning.Models.Utilities.GetInstance().GetCurrentUserName() <b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            <li role="presentation">
                <a role="menuitem" tabindex="-1" href="/Account/Manage/"><i class="fa fa-key"></i> Change Password</a>
            </li>
            <li role="presentation">
                <a role="menuitem" tabindex="-1" href="/Account/EditUser/@ELearning.Models.Utilities.GetInstance().GetCurrentUserId()"><i class="fa fa-user"></i> Profile</a>
            </li>
            <li class="divider"></li>
            <li role="presentation">
                <a role="menuitem" tabindex="-1" href="/Account/LogOff/"><i class="fa fa-power-off"></i> Log Out</a>
            </li>
        </ul>
    </div>

}
else
{
    <ul>
        @if (ELearning.Models.Utilities.GetInstance().GetUserCountIncludingAdmin() == 0)
        {
            <li>
                <a href="/Account/Login/">Login</a> |
                <a href="/Account/Register/">Register</a>
            </li>
        }
        else
        {
            <li>
                <a href="/Account/Login/">Login</a>
            </li>
        }

    </ul>
}


